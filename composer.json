{
    "name": "mr-carlos-barbershop/sistema-agendamento",
    "description": "Sistema de agendamento para barbearia Mr. Carlos Barbershop",
    "type": "project",
    "keywords": ["barbershop", "agendamento", "php", "mysql"],
    "homepage": "https://mrcarlosbarbershop.pt",
    "license": "proprietary",
    "authors": [
        {
            "name": "Mr. Carlos Barbershop",
            "email": "admin@mrcarlosbarbershop.pt"
        }
    ],
    "require": {
        "php": ">=8.0",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {},
    "autoload": {
        "files": [
            "includes/helpers.php",
            "includes/security.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"if (!file_exists('config/config.php') && file_exists('config/config.example.php')) { copy('config/config.example.php', 'config/config.php'); }\""
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}